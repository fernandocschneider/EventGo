{
  "packages": {
    "node": {
      "version": "22.20.0"
    }
  },
  "build": {
    "commands": [
      "npm ci",
      "cd apps/api && npm ci",
      "cd apps/api && npx prisma generate",
      "cd apps/web && npm ci",
      "npm run build"
    ]
  },
  "deploy": {
    "startCommand": "npm run start"
  }
}
